# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    next unless target.name == 'BoringSSL-GRPC'

    target.build_configurations.each do |config|
      other_cflags = config.build_settings['OTHER_CFLAGS']
      next unless other_cflags

      normalized_flags =
        if other_cflags.is_a?(Array)
          other_cflags
        else
          other_cflags.to_s.split(/\s+/)
        end

      filtered_flags = normalized_flags.reject { |flag| flag == '-G' }

      next if filtered_flags.length == normalized_flags.length

      config.build_settings['OTHER_CFLAGS'] =
        if other_cflags.is_a?(Array)
          filtered_flags
        else
          filtered_flags.join(' ')
        end

      puts "Removed unsupported -G compiler flag from BoringSSL-GRPC #{config.name} configuration."
    end
  end

  launcher_path = File.join(__dir__, '.symlinks', 'plugins', 'url_launcher_ios', 'ios', 'Classes', 'Launcher.swift')
  if File.exist?(launcher_path)
    contents = File.read(launcher_path)
    updated = false

    unless contents.match?(/@MainActor\s+(public\s+)?protocol\s+Launcher/)
      contents = contents.sub(/(public\s+)?protocol\s+Launcher(\s*:[^{]+)?\s*\{/) do |match|
        "@MainActor\n#{match}"
      end
      updated = true
      puts 'Applied @MainActor annotation to url_launcher_ios Launcher protocol to satisfy UIApplication concurrency requirements.'
    end

    unless contents.match?(/@MainActor\s+@available[^{]+extension\s+UIApplication\s*:\s*Launcher/)
      contents = contents.sub(/@available([^{]+extension\s+UIApplication\s*:\s*Launcher\s*\{)/) do |match|
        "@MainActor\n#{match}"
      end
      updated = true
      puts 'Applied @MainActor annotation to url_launcher_ios UIApplication extension to satisfy concurrency requirements.'
    end

    File.write(launcher_path, contents) if updated
  end
end
