# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

def remove_flag_from_build_settings(config, setting_name, flag)
  setting_value = config.build_settings[setting_name]
  return false unless setting_value

  normalized_flags =
    if setting_value.is_a?(Array)
      setting_value
    else
      setting_value.to_s.split(/\s+/)
    end

  filtered_flags = normalized_flags.reject { |value| value == flag }
  return false if filtered_flags.length == normalized_flags.length

  config.build_settings[setting_name] =
    if setting_value.is_a?(Array)
      filtered_flags
    else
      filtered_flags.join(' ')
    end

  true
end

def remove_flag_from_all_variants(config, setting_name_prefix, flag)
  config.build_settings.keys.grep(/^#{Regexp.escape(setting_name_prefix)}(\[.*\])?$/).any? do |key|
    remove_flag_from_build_settings(config, key, flag)
  end
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    next unless target.name == 'BoringSSL-GRPC'

    target.build_configurations.each do |config|
      removed_flag = %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS].any? do |setting_name|
        remove_flag_from_all_variants(config, setting_name, '-G')
      end

      puts "Removed unsupported -G compiler flag from BoringSSL-GRPC #{config.name} configuration." if removed_flag
    end
  end

  launcher_path = File.join(__dir__, '.symlinks', 'plugins', 'url_launcher_ios', 'ios', 'Classes', 'Launcher.swift')
  if File.exist?(launcher_path)
    contents = File.read(launcher_path)
    updated = false

    unless contents.match?(/@MainActor\s+(public\s+)?protocol\s+Launcher/)
      contents = contents.sub(/(public\s+)?protocol\s+Launcher(\s*:[^{]+)?\s*\{/) do |match|
        "@MainActor\n#{match}"
      end
      updated = true
      puts 'Applied @MainActor annotation to url_launcher_ios Launcher protocol to satisfy UIApplication concurrency requirements.'
    end

    unless contents.match?(/@MainActor\s+@available[^{]+extension\s+UIApplication\s*:\s*Launcher/)
      contents = contents.sub(/@available([^{]+extension\s+UIApplication\s*:\s*Launcher\s*\{)/) do |match|
        "@MainActor\n#{match}"
      end
      updated = true
      puts 'Applied @MainActor annotation to url_launcher_ios UIApplication extension to satisfy concurrency requirements.'
    end

    File.write(launcher_path, contents) if updated
  end
end
