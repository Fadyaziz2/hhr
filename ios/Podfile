# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

def remove_flag_from_build_settings(config, setting_name, flag)
  setting_value = config.build_settings[setting_name]
  return false unless setting_value

  normalized_flags =
    if setting_value.is_a?(Array)
      setting_value
    else
      setting_value.to_s.split(/\s+/)
    end

  filtered_flags = normalized_flags.reject { |value| value == flag }
  return false if filtered_flags.length == normalized_flags.length

  config.build_settings[setting_name] =
    if setting_value.is_a?(Array)
      filtered_flags
    else
      filtered_flags.join(' ')
    end

  true
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # إعدادات Flutter الافتراضية
    flutter_additional_ios_build_settings(target)
    # ==== ضبط gRPC على C++17 علشان مشاكل الـ template مع Xcode ====
    if ['gRPC-Core', 'gRPC-C++'].include?(target.name)
      target.build_configurations.each do |config|
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
        puts "Set C++17 for #{target.name} (#{config.name})"
      end
    end

    # نشتغل بس على BoringSSL-GRPC
    next unless target.name == 'BoringSSL-GRPC'

    # 1) إزالة -GCC_WARN_INHIBIT_ALL_WARNINGS من إعدادات الكونفيج
    target.build_configurations.each do |config|
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS].each do |setting_name|
        setting_value = config.build_settings[setting_name]
        next unless setting_value

        flags =
          if setting_value.is_a?(Array)
            setting_value
          else
            setting_value.to_s.split(/\s+/)
          end

        # نشيل التوكن اللي بيطلع في الكومبايل
        filtered = flags.reject { |f| f == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
        next if filtered.length == flags.length

        config.build_settings[setting_name] =
          if setting_value.is_a?(Array)
            filtered
          else
            filtered.join(' ')
          end

        puts "Removed -GCC_WARN_INHIBIT_ALL_WARNINGS from #{target.name} #{config.name} #{setting_name}"
      end

      # كمان نطفي الفلاج كـ build setting لو موجود
      if config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS']
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'NO'
        puts "Disabled GCC_WARN_INHIBIT_ALL_WARNINGS in #{target.name} #{config.name}"
      end
    end

    # 2) إزالة -GCC_WARN_INHIBIT_ALL_WARNINGS من COMPILER_FLAGS على مستوى الملفات
    target.build_phases.each do |phase|
      next unless phase.respond_to?(:files)

      phase.files.each do |file|
        settings = file.settings
        next unless settings && settings['COMPILER_FLAGS']

        flags = settings['COMPILER_FLAGS'].to_s.split(/\s+/)
        next unless flags.include?('-GCC_WARN_INHIBIT_ALL_WARNINGS')

        flags.reject! { |f| f == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
        settings['COMPILER_FLAGS'] = flags.join(' ')
        puts "Removed -GCC_WARN_INHIBIT_ALL_WARNINGS from COMPILER_FLAGS of #{target.name} file #{file.display_name}"
      end
    end
  end

  # ===== إصلاح url_launcher_ios زي ما هو عندك =====
  launcher_path = File.join(__dir__, '.symlinks', 'plugins', 'url_launcher_ios', 'ios', 'Classes', 'Launcher.swift')
  if File.exist?(launcher_path)
    contents = File.read(launcher_path)
    updated = false

    unless contents.match?(/@MainActor\s+(public\s+)?protocol\s+Launcher/)
      contents = contents.sub(/(public\s+)?protocol\s+Launcher(\s*:[^{]+)?\s*\{/) do |match|
        "@MainActor\n#{match}"
      end
      updated = true
      puts 'Applied @MainActor annotation to url_launcher_ios Launcher protocol to satisfy UIApplication concurrency requirements.'
    end

    unless contents.match?(/@MainActor\s+@available[^{]+extension\s+UIApplication\s*:\s*Launcher/)
      contents = contents.sub(/@available([^{]+extension\s+UIApplication\s*:\s*Launcher\s*\{)/) do |match|
        "@MainActor\n#{match}"
      end
      updated = true
      puts 'Applied @MainActor annotation to url_launcher_ios UIApplication extension to satisfy concurrency requirements.'
    end

    File.write(launcher_path, contents) if updated
  end
end
