# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

def remove_flag_from_build_settings(config, setting_name, flag)
  setting_value = config.build_settings[setting_name]
  return false unless setting_value

  normalized_flags =
    if setting_value.is_a?(Array)
      setting_value
    else
      setting_value.to_s.split(/\s+/)
    end

  filtered_flags = normalized_flags.reject { |value| value == flag }
  return false if filtered_flags.length == normalized_flags.length

  config.build_settings[setting_name] =
    if setting_value.is_a?(Array)
      filtered_flags
    else
      filtered_flags.join(' ')
    end

  true
end

require 'fileutils'
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

def ensure_writable(path)
  return true if File.writable?(path)

  begin
    FileUtils.chmod('u+w', path)
    return true if File.writable?(path)
  rescue Errno::EACCES, Errno::EPERM => e
    puts "Unable to adjust permissions for #{path}: #{e.message}"
  end

  false
end

flutter_ios_podfile_setup

target 'Runner' do
  # Use static frameworks to ensure C++ dependencies like Abseil link correctly.
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # إعدادات Flutter الافتراضية
    flutter_additional_ios_build_settings(target)
    # أجبر كل البودز تستخدم أقل شيء iOS 12 علشان نتفادى مشاكل التوافق
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
    end
    # ==== ضبط gRPC على C++17 علشان مشاكل الـ template مع Xcode ====
    if ['gRPC-Core', 'gRPC-C++'].include?(target.name)
      target.build_configurations.each do |config|
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
        puts "Set C++17 for #{target.name} (#{config.name})"
      end
    end

    # نشتغل بس على BoringSSL-GRPC
    next unless target.name == 'BoringSSL-GRPC'

    # 1) إزالة -GCC_WARN_INHIBIT_ALL_WARNINGS من إعدادات الكونفيج
    target.build_configurations.each do |config|
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS].each do |setting_name|
        setting_value = config.build_settings[setting_name]
        next unless setting_value

        flags =
          if setting_value.is_a?(Array)
            setting_value
          else
            setting_value.to_s.split(/\s+/)
          end

        # نشيل التوكن اللي بيطلع في الكومبايل
        filtered = flags.reject { |f| f == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
        next if filtered.length == flags.length

        config.build_settings[setting_name] =
          if setting_value.is_a?(Array)
            filtered
          else
            filtered.join(' ')
          end

        puts "Removed -GCC_WARN_INHIBIT_ALL_WARNINGS from #{target.name} #{config.name} #{setting_name}"
      end

      # كمان نطفي الفلاج كـ build setting لو موجود
      if config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS']
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'NO'
        puts "Disabled GCC_WARN_INHIBIT_ALL_WARNINGS in #{target.name} #{config.name}"
      end
    end

    # 2) إزالة -GCC_WARN_INHIBIT_ALL_WARNINGS من COMPILER_FLAGS على مستوى الملفات
    target.build_phases.each do |phase|
      next unless phase.respond_to?(:files)

      phase.files.each do |file|
        settings = file.settings
        next unless settings && settings['COMPILER_FLAGS']

        flags = settings['COMPILER_FLAGS'].to_s.split(/\s+/)
        next unless flags.include?('-GCC_WARN_INHIBIT_ALL_WARNINGS')

        flags.reject! { |f| f == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
        settings['COMPILER_FLAGS'] = flags.join(' ')
        puts "Removed -GCC_WARN_INHIBIT_ALL_WARNINGS from COMPILER_FLAGS of #{target.name} file #{file.display_name}"
      end
    end
  end

  # Patch gRPC basic_seq.h to remove an invalid `template` keyword usage that
  # breaks builds with recent versions of Clang (it expects template arguments
  # after `Traits::template CallSeqFactory`).
  grpc_basic_seq_paths = [
    File.join(
      installer.sandbox.root,
      'gRPC-Core',
      'src',
      'core',
      'lib',
      'promise',
      'detail',
      'basic_seq.h'
    ),
    File.join(
      installer.sandbox.root,
      'gRPC-C++',
      'src',
      'core',
      'lib',
      'promise',
      'detail',
      'basic_seq.h'
    )
  ]

  grpc_basic_seq_paths.each do |grpc_basic_seq|
    next unless File.exist?(grpc_basic_seq)

    contents = File.read(grpc_basic_seq)
    target = 'Traits::template CallSeqFactory'
    if contents.include?(target)
      unless ensure_writable(grpc_basic_seq)
        puts "Skipped patching #{grpc_basic_seq} because it is not writable."
        next
      end

      File.write(grpc_basic_seq, contents.gsub(target, 'Traits::CallSeqFactory'))
      puts "Patched Traits::CallSeqFactory template usage in #{grpc_basic_seq} to satisfy Clang."
    end
  end
end
